<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guest">

	<!-- 전체리스트 가져오기 resultMap -->
	<select id="selectList" resultType="com.javaex.vo.GuestVo">
		<![CDATA[
			SELECT no,
       			   name,
      	       	password,
          	   	content,
         	   	reg_date
       		FROM guestbook
       		order by no desc
		]]>
	</select>
	
	
	<!-- 방명록 저장 -->
	<insert id="insert" parameterType="com.javaex.vo.GuestVo">
		<![CDATA[
			insert into guestbook
			values(SEQ_NO.nextval, 
			       #{name}, 
			       #{password}, 
			       #{content}, 
			       sysdate)
		]]>
	</insert>

	
	<!-- 방명록 1가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.GuestVo">
		<![CDATA[
			SELECT no,
       			   name,
      	           password,
          	   	   content,
         	   	   reg_date
       		FROM guestbook
       		where no = #{no}
		]]>
	</select>
	
		
	<!-- 방명록 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from guestbook
			where no = #{no}
		]]>
	</delete>
	
	
	<!-- ajax 방명록 저장 -->
	<insert id="insertSelectkey" parameterType="com.javaex.vo.GuestVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">	
		select seq_no.nextval from dual
	</selectKey>

		
		<![CDATA[
		
			insert into guestbook
			values(#{no}, 
			       #{name}, 
			       #{password}, 
			       #{content}, 
			       sysdate)
		]]>
	</insert>

</mapper>