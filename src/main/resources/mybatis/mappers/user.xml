<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 회원정보 등록 -->
	<insert id="insert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values(SEQ_no.nextval, 
				   #{id}, 
				   #{password}, 
		 	  	   #{name}, 
		   		   #{gender}
		  	 	   )
		]]>
	</insert>


	<!-- 회원정보 가져오기 세션-->
	<select id="selectUser" parameterType="com.javaex.vo.UserVo"
		resultType="com.javaex.vo.UserVo">
		<![CDATA[
			SELECT no,
     		       name
            FROM users
            where id = #{id}
            and password = #{password}
		]]>
	</select>
	
	
	<!-- 회원정보 가져오기 -->
	<select id="select" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			SELECT no,
			       id,
			       name,
			       gender
			FROM users
			where no = #{no}
		]]>	
	</select>
	
	<!-- 회원정보 수정 -->
	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
			set password = #{password},
			    name = #{name},
			    gender = #{gender}
			where no = #{no}    
		]]>
	</update>
	
	<!-- 회원정보 가져오기 회원가입중복확인 -->
		<select id="selectBuId" parameterType="String" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			SELECT no,
			       id,
			       name,
			       gender
			FROM users
			where id = #{id}
		]]>	
	</select>
</mapper>